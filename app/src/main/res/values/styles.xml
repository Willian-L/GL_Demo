<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="edt_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_edt_login</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:maxLength">20</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="btn_login_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="btn_wx_nav">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="btn_wx_titleBar">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!--溢出[弹出]菜单样式 parent相当于继承【可以不要parent】-->
    <style name="OverflowMenuStyle" parent="ThemeOverlay.AppCompat.Dark">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:width">60dp</item>
        <item name="android:minWidth">42dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="listPreferredItemHeightSmall">60dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@drawable/toolmenu_background</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">8dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <!-- 设置分割线 -->
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
    </style>

    <!-- Change Overflow Menu ListView Divider Property -->
    <style name="PopupMenuListView"  parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">#444444</item>
    </style>

    <style name="ContextMenuStyle">
        <item name="android:width">60dp</item>
        <item name="android:minWidth">42dp</item>
        <item name="listPreferredItemHeightSmall">60dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:popupBackground">@drawable/bg_context_menu</item>
    </style>

    <style name="find_img_right_arrow">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="find_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="sqlite_linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="sqlite_edt_stu_id">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:maxLength">13</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="sqlite_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#D0D0D0</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
</resources>